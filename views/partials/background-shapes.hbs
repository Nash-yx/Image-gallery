<!-- 方形裝飾 -->
<div
  class="square"
  style="top: 65%; left: 5%; width: 80px; height: 80px; opacity: 0.04; transform: rotate(15deg);"
></div>
<div
  class="square"
  style="top: 30%; left: 75%; width: 120px; height: 120px; opacity: 0.03; transform: rotate(45deg);"
></div>

